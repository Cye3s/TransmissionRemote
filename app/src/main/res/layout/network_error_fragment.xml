<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <TextView android:id="@+id/error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/default_layout_margin"
        android:layout_marginRight="@dimen/default_layout_margin"
        android:layout_marginBottom="@dimen/default_layout_margin"
        android:gravity="center"
        android:textSize="@dimen/tr_abc_text_size_medium_material"
        android:textColor="?android:attr/textColorPrimary"/>
    <Button android:id="@+id/server_settings_button"
        android:layout_width="@dimen/default_button_with_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_message"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tr_abc_text_size_button_material"
        android:text="@string/server_settings"/>
    <Button android:id="@+id/network_settings_button"
        android:layout_width="@dimen/default_button_with_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/server_settings_button"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tr_abc_text_size_button_material"
        android:text="@string/network_settings"/>
    <Button android:id="@+id/retry_button"
        android:layout_width="@dimen/default_button_with_icon_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/network_settings_button"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tr_abc_text_size_button_material"
        android:text="@string/retry"/>
</RelativeLayout>
