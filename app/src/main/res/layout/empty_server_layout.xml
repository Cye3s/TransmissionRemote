<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <TextView android:id="@+id/text"
        android:layout_width="0dp"
        app:layout_widthPercent="80%"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/default_layout_margin"
        android:padding="@dimen/default_padding"
        android:textSize="@dimen/tr_abc_text_size_title_material"
        android:text="@string/add_server_details"/>
    <Button android:id="@+id/add_server_button"
        android:layout_width="0dp"
        app:layout_widthPercent="60%"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/tr_abc_text_size_button_material"
        android:onClick="openAddServerActivity"
        android:text="@string/add_server"/>
</android.support.percent.PercentRelativeLayout>
